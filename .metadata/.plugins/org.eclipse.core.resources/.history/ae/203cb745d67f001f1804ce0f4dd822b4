package sample04;

import java.util.List;
import java.util.Scanner;

import javax.swing.text.html.HTMLDocument.Iterator;

public class SungJukDelete implements SungJuk {

	@Override
	public void execute(List<SungJukDTO2> list) {
		Scanner scan = new Scanner(System.in);
		String name;
		int count = 0;

		System.out.print("삭제할 이름 입력 : ");
		name = scan.next();

		Iterator<SungJukDTO2> it = list.iterator();
		while(it.hasNext()) { //현재 위치에 항목이 있습니까? true / false
			//항목을 꺼내고 임시공간에 보관하고, 다음으로 이동한다.
			SungJukDTO2 sungJukDTO = it.next();
			
			if(sungJukDTO.getName().equals(name)) {
				it.remove(); //it.next()가 반환한 항목을 제거한다.
				count++;
			}
		}
		
		if(count == 0) {
			System.out.println("회원의 정보가 없습니다");
			System.out.println();
		}
		else {
			System.out.println(count + "건의 항목을 삭제했습니다.");
			System.out.println();
		}
	}

}
