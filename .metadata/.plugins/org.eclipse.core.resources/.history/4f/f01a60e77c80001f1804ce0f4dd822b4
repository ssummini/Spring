package sample04;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.annotation.Value;
import org.springframework.context.annotation.Scope;
import org.springframework.stereotype.Component;

@Component
@Scope("prototype")
public class SungJukDTO2 {
	private String name;
	private int kor;
	private int eng;
	private int math;
	private int tot;
	private double avg;	
	
    public void cal() {
        tot = kor + eng + math;
        avg = tot / 3.0;
    }
    
	@Override
	public String toString() {
		return name + "\t"
			 + kor + "\t"
			 + eng + "\t"
			 + math + "\t"
			 + tot + "\t"
			 + String.format("%.2f", avg);
	}

	public String getName() {
		return name;
	}
	
	@Autowired
	public void setName(@Value("null") String name) {
		this.name = name;
	}

	public int getKor() {
		return kor;
	}
	@Autowired
	public void setKor(@Value("0") int kor) {
		this.kor = kor;
	}

	public int getEng() {
		return eng;
	}
	@Autowired
	public void setEng(@Value("0") int eng) {
		this.eng = eng;
	}

	public int getMath() {
		return math;
	}
	@Autowired
	public void setMath(@Value("0") int math) {
		this.math = math;
	}

	public int getTot() {
		return tot;
	}

	public void setTot(int tot) {
		this.tot = tot;
	}

	public double getAvg() {
		return avg;
	}

	public void setAvg(double avg) {
		this.avg = avg;
	}
	
	
}
